#!/bin/bash

function link() {
  if [ -e "$2" ]; then
    echo "File $2 already exists"
  else
    ln -s "$1" "$2"
    echo "Linked $1 to $2"
  fi
}

mkdir -p "$HOME/.config/nvim"
link "$PWD/init.vim" "$HOME/.config/nvim/init.vim"

mkdir -p "$HOME/.local/share"
link "$PWD/libhangul" "$HOME/.local/share/libhangul"

mkdir -p "$HOME/.vim"
link "$PWD/vimrc" "$HOME/.vim/vimrc"
